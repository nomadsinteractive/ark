<?xml version="1.0" encoding="utf-8"?>
<resources>
	<import name="pre" src="prefab.xml"/>

	<render-object id="f001" type="3" size="200, 120" layer="@pre:l003"/>
	<render-object id="f002" type="4" size="200, 120" layer="@pre:l003"/>

	<view id="@root_view" class="view-group" size="540, 960" layout="vertical(left)">
		<label text="This is some text" layer="@pre:l002" text-scale="0.5" style="display: block"/>
		<label text="This is some other text" layer="@pre:l001" text-scale="0.6" style="display: block; margin-top: 50"/>
		<label text="This are some buttonz" layer="@pre:l002" text-scale="0.5" style="display: block; margin-top: 50"/>
		<view-group layout="vertical(left)" size="match_parent, wrap_content">
			<view-group size="match_parent, 200" layout="horizontal(center)">
				<button background="@f001" style="onclick: $on_red_clicked">
					<state name="pushing" background="@f002"/>
				</button>
			</view-group>
			<view-group size="match_parent, 200" layout="horizontal(center)">
				<label text="This is some other text" layer="@pre:l001" text-scale="0.6" style="display: block; margin-top: 50"/>
			</view-group>
		</view-group>
	</view>
	<arena id="main" view="@root_view">
		<layer ref="@pre:l001"/>
		<layer ref="@pre:l002"/>
		<layer ref="@pre:l003"/>
		<renderer ref="@pre:fps-counter"/>
	</arena>
</resources>